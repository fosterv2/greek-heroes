<div>
<h2>Log In</h2>

<%= render 'layouts/flash' %>

<%= form_for :sessions do |f| %>
    <div>
    Username: 
    <%= f.text_field :username %><br>
    </div>
    <div>
    Password: 
    <%= f.password_field :password %><br>
    </div>
    <%= f.submit "login" %><br>
<% end %>

Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
</div>
